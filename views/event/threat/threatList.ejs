<!-- card -->
<div class="card">
  <!-- card-box -->
  <article class="card-box">
    <div class="card-header">
      <h2 class="card-title"><%= __("eventThreat|Event list to process") %></h2>
      <div class="card-header-right">
        <!-- timesearch-area -->
        <div class="timesearch-area">
          <div class="ui-radio default-style">
            <input type="radio" name="time_type" id="detection_time" checked>
            <label for="detection_time"><%= __("eventThreat|Processed time") %></label>
          </div>
          <div class="ui-time">
            <div class="time-setting">
              <button type="button" class="btn btn-icon btn-time-setting"><span class="sr-only"><%= __("eventThreat|Quick select") %></span></button>
              <div class="time-setting-content">
                <div class="time-setting-header">
                  <h3 class="time-setting-title"><%= __("eventThreat|Quick select") %></h3>
                  <button type="button" class="btn-time-setting-close"><span class="sr-only"><%= __("eventThreat|close") %></span></button>
                </div>
                <ul>
                  <li><button type="button" class="btn btn-time-choice" data-rel="today"><%= __("eventThreat|Today") %></button></li>
                  <li><button type="button" class="btn btn-time-choice" data-rel="last7day"><%= __("eventThreat|Last 7day") %></button></li>
                  <li><button type="button" class="btn btn-time-choice" data-rel="last30day"><%= __("eventThreat|Last 30day") %></button></li>
                  <li><button type="button" class="btn btn-time-choice" data-rel="thisweek"><%= __("eventThreat|This week") %></button></li>
                  <li><button type="button" class="btn btn-time-choice" data-rel="thismonth"><%= __("eventThreat|This month") %></button></li>
                </ul>
              </div>
            </div>
            <div class="ui-datepicker datepicker-from">
              <div class="ui-input default-style"><input type="text" class="tail-datetime-field" id="from-datepicker" value="<%= dateFormat(time.from) %>" autocomplete="off"></div>
            </div>
            <span class="form-text">-</span>
            <div class="ui-datepicker datepicker-to">
              <div class="ui-input default-style"><input type="text" class="tail-datetime-field" id="to-datepicker" value="<%= dateFormat(time.to) %>" autocomplete="off"></div>
            </div>
          </div>
        </div>
        <!-- //.timesearch-area -->
        <button type="button" data-btn="filter" class="btn btn-icon btn-explore"><span class="icon icon-explore"><span class="sr-only"><%= __("eventThreat|search") %></span></span></button>

        <!--
        * @date 2021-04-15
        * @desc add reset button
        * @company
        * -->
        <button type="button" data-btn="reset" class="btn btn-icon btn-reset"><span class="icon icon-reset"><i class="line"></i><i class="line"></i><span class="sr-only"><%= __("eventThreat|reset") %></span></span></button>
        <!-- // @date 2021-04-15 -->
      </div>
    </div>
    <div class="card-body">
      <!-- search-area -->
      <div class="search-area">
        <div class="filter-custom">
          <div class="custom-result">
          </div>
          <div class="custom-search">
            <button type="button" class="btn btn-icon btn-custom-search"><span
                class="icon icon-custom-search"><span
                  class="sr-only"><%= __("eventThreat|Add filter") %></span></span></button>
            <div class="custom-search-content">
              <div class="custom-search-header">
                <h3 class="custom-search-title"><%= __("eventThreat|Add filter") %></h3>
                <button type="button" class="btn-custom-search-close"><span
                    class="sr-only"><%= __("eventThreat|close") %></span></button>
              </div>
              <div class="custom-search-box">
                <div class="ui-search">
                  <div class="filter-select">
                    <!-- <div class="ui-select default-style" data-width="140px">
											<select name="" id="">
												<option value="">Severity</option>
											</select>
										</div> -->
                  </div>
                  <div class="condition-box">
                    <!-- <div class="ui-input default-style"><input type="text" placeholder="Search"></div> -->
                    <!-- <div class="ui-select default-style">
											<select name="" id="">
												<option value="0">Low</option>
												<option value="1">Medium</option>
												<option value="2">High</option>
												<option value="3">Critical</option>
											</select>
										</div> -->
                  </div>
                </div>
              </div>
              <div class="custom-search-footer">
                <button type="button" class="btn btn-normal primary-style smaller-size btn-custom-add"><%= __("eventThreat|Add") %></button>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- //.search-area -->
      <div class="pack">
        <!-- table-comp -->
        <div class="table-comp table-check table-accordion">
          <div class="table-scroll default-style">
            <div class="thead-scroll">
              <table class="table default-style">
                <caption><span class="sr-only"><%= __("eventThreat|eventList") %></span></caption>
                <colgroup>
                  <col style="width: 3%; " />
                  <col style="width: 5%; " />
                  <col style="width: 10%; " /><!-- Processed time -->
                  <col style="width: 12%; " /><!-- Threat type -->
                  <col style="width: 18%; " /><!-- Sensor name -->
                  <col style="width: 20%; " /><!-- Asset name -->
                  <col style="width: 10%; " /><!-- Severity -->
                  <col style="width: 10%; " /><!-- Event processing -->
                </colgroup>
                <thead>
                  <tr>
                    <th scope="row" class="cell-check">
                      <div class="ui-checkbox default-style empty-type">
                        <input type="checkbox" name="checkbox1" id="checkbox0_1">
                        <label for="checkbox0_1"><span
                            class="sr-only"><%= __("eventThreat|select") %></span></label>
                      </div>
                    </th>
                    <th scope="row" class="cell-accordion">
                      <span class="accordion-empty"></span>
                    </th>
                    <th scope="row"><%= __("eventThreat|Processed time") %></th>
                    <th scope="row"><%= __("eventThreat|Threat type") %></th>
                    <th scope="row"><%= __("eventThreat|Sensor name") %></th>
                    <th scope="row"><%= __("eventThreat|Asset name") %></th>
                    <th scope="row"><%= __("eventThreat|Severity") %></th>
                    <th scope="row"><%= __("eventThreat|Event processing") %></th>
                  </tr>
                </thead>
              </table>
            </div>
            <div class="tbody-scroll">
              <table class="table default-style">
                <caption><span class="sr-only"><%= __("eventThreat|eventList") %></span></caption>
                <colgroup>
                  <col style="width: 3%; " />
                  <col style="width: 5%; " />
                  <col style="width: 10%; " /><!-- Processed time -->
                  <col style="width: 12%; " /><!-- Threat type -->
                  <col style="width: 18%; " /><!-- Sensor name -->
                  <col style="width: 20%; " /><!-- Asset name -->
                  <col style="width: 10%; " /><!-- Severity -->
                  <col style="width: 10%; " /><!-- Event processing -->
                </colgroup>
                <tbody>
                  <% for (let i = 0; i < ObjView.length; i++) { %>
                  <% const data = ObjView[i] %>
                  <!-- accordion-content-title -->
                  <tr class="accordion-content-title" data-threat_event_id="<%= data.idx %>" data-category="<%= data.category %>">
                    <td class="cell-check">
                      <div class="ui-checkbox default-style empty-type">
                        <input type="checkbox" name="threat<%= i%>-check" id="threat<%= i%>-check">
                        <label for="threat<%= i%>-check"><span class="sr-only"><%= __("eventThreat|select") %></span></label>
                      </div>
                    </td>
                    <td class="cell-accordion">
                      <button type="button" class="btn btn-icon btn-accordion">
                        <span class="icon icon-accordion"><span class="sr-only"><%= __("eventThreat|open/fold") %></span></span>
                      </button>
                    </td>
                    <td class="cell-center"><%= dateFormat(data.end_time) %></td>
                    <td class="cell-center">
                      <% if (data.category == 3){ %><%= __("eventThreat|Spoofing") %>
                      <% } else if (data.category == 4){ %><%= __("eventThreat|Zombie service") %>
                      <% } else if (data.category == 5){ %><%= __("eventThreat|Backdoor") %>
                      <% } else if (data.category == 6){ %><%= __("eventThreat|ICMP Redirect") %>
                      <% } else if (data.category == 7){ %><%= __("eventThreat|Mining Nodes") %><% } %>
                    </td>
                    <td><span class="ellipsis"><%= data.sensor_name %></span></td>
                    <td><span class="ellipsis"><% if (data.asset_name){ %><%= data.asset_name %><% } else { %>-<% } %></span></td>
                    <td class="cell-center">
                      <% if (data.severity == 0){ %><span class="severity severity-low"><%= __("eventThreat|Low") %></span>
                      <% } else if (data.severity == 1){ %><span class="severity severity-medium"><%= __("eventThreat|Medium") %></span>
                      <% } else if (data.severity == 2){ %><span class="severity severity-high"><%= __("eventThreat|High") %></span>
                      <% } else if (data.severity == 3){ %><span class="severity severity-critical"><%= __("eventThreat|Critical") %></span><% } %>
                    </td>
                    <td class="cell-center">
                      <% if (data.action === false){ %><%= __("eventThreat|Pending process") %>
                      <% } else if (data.action === true){ %><%= __("eventThreat|Processed") %>
                      <% } else if (data.action === null){ %><%= __("eventThreat|To be processed") %><% } %>
                    </td>
                  </tr>
                  <!-- //accordion-content-title -->
                  <!-- accordion-content -->
                  <tr class="accordion-content">
                    <td colspan="8">
                      <div class="accordion-content-box">
                      </div>
                    </td>
                  </tr>
                  <!-- //accordion-content -->
                  <% } %>
                </tbody>
              </table>
              <!--
              * @date 2021-05-31
              * @desc front performance improvement - dummy rendering
              * @company
              * -->
              <% if (ObjView.length == 0 && typeof rendering == 'undefined') { %>
              <!-- // @date 2021-05-31 -->
              <!-- empty -->
              <div class="empty">
                <div class="empty-box">
                  <div class="symbol symbol-empty">
                    <span class="symbol-icon question-style"></span>
                    <div class="symbol-figure empty-style"></div>
                  </div>
                  <p class="main-msg"><%= __("eventThreat|No data available") %></p>
                  <p class="sub-msg"><%= __("eventThreat|There is no data to show you right now.") %></p>
                </div>
              </div>
              <!-- //empty -->
              <% } %>
            </div>
          </div>
        </div>
        <!-- //table-comp -->
      </div>
      <div class="table-bottom">
        <div class="btn-table-box">
          <button type="button" data-btn="processing" class="btn btn-normal primary-style"><%= __("eventThreat|Process selected events") %></button>
        </div>
        <div class="table-bottom-right">
          <%- include ('../../../views/include/pagination.ejs', {pages: pages, current: current}) %>
          <div class="ui-select default-style" data-direction="up">
            <select name="" id="listEntries">
              <option value="10" selected><%= __("eventThreat|Show 10 entries") %></option>
              <option value="20"><%= __("eventThreat|Show 20 entries") %></option>
              <option value="30"><%= __("eventThreat|Show 30 entries") %></option>
            </select>
          </div>
        </div>
      </div>
    </div>
  </article>
  <!-- //card-box -->
</div>
<!-- //card -->

