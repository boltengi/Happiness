            </div>
            <!-- //vulnerability -->
            <!-- sensor -->
            <div id="adminSystemSensor" class="tab-content">
              <div class="html-container"></div>
            </div>
            <!-- //sensor -->
            <!-- license -->
            <div id="adminSystemLicense" class="tab-content">
              <div class="html-container"></div>
            </div>
            <!-- //license -->
            <!-- manual -->
            <div id="adminSystemManual" class="tab-content">
              <div class="html-container"></div>
            </div>
            <!-- //manual -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  tab('.tab');
  formWidth();
</script>

<script>
  requestSystem('Vulnerability');
</script>

<script>
  $('#systemTab .tab-link').off('click.radarTab').on('click.radarTab', function(e){
