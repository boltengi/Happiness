              <a href="#adminSystemVulnerability"><%= __("administrationSystem|Vulnerability engine") %></a>
            </div>
            <div class="tab-link">
              <a href="#adminSystemSensor"><%= __("administrationSystem|Sensor package") %></a>
            </div>
            <div class="tab-link" style="display: none; ">
              <a href="#adminSystemLicense"><%= __("administrationSystem|License") %></a>
            </div>
            <div class="tab-link">
              <a href="#adminSystemManual"><%= __("administrationSystem|Manual") %></a>
            </div>
          </div>
          <div class="tab-container">
            <!-- vulnerability -->
            <div id="adminSystemVulnerability" class="tab-content on">
