                      <div class="ui-checkbox default-style empty-type">
                        <input type="checkbox" name="checkbox1" id="checkbox0_1">
                        <label for="checkbox0_1"><span class="sr-only"><%= __("administrationUser|select") %></span></label>
                      </div>
                    </th>
                    <th scope="row"><%= __("administrationUser|Company") %></th>
                    <th scope="row"><%= __("administrationUser|User") %></th>
                    <th scope="row"><%= __("administrationUser|E-mail") %></th>
                    <th scope="row"><%= __("administrationUser|Role") %></th>
                    <th scope="row"><%= __("administrationUser|Latest login") %></th>
                    <th scope="row"><%= __("administrationUser|Edit") %></th>
                  </tr>
                </thead>
              </table>
            </div>
            <div class="tbody-scroll">
              <table class="table default-style">
                <caption><span class="sr-only"><%= __("administrationUser|UserList") %></span></caption>
                <colgroup>
                  <col style="width: 3%; " />
                  <col style="width: 25%; "/><!-- Company -->
                  <col style="width: 21%; "/><!-- User -->
                  <col style="width: 15%; "/><!-- E-mail -->
                  <col style="width: 12%; "/><!-- Role -->
                  <col style="width: 12%; "/><!-- Latest login -->
                  <col style="width: 12%; "/><!-- Edit -->
                </colgroup>
                <tbody>
                  <% for (let i = 0; i < ObjView.length; i++) { %>
                  <% const data = ObjView[i] %>
                  <!--
                  * @date 2021-05-31
                  * @desc change data that's sended for delete
                  * @company
                  * -->
                  <tr data-uid="<%= data.uid %>" data-user_email="<%= data.user_email %>">
                  <!-- // @date 2021-05-31 -->
                    <td class="cell-check">
                      <div class="ui-checkbox default-style empty-type">
                        <input type="checkbox" name="user<%= i %>" id="user<%= i %>">
                        <label for="user<%= i %>"><span class="sr-only"><%= __("administrationUser|select") %></span></label>
                      </div>
                    </td>
                    <td><span class="ellipsis"><%= data.company %></span></td>
                    <td><span class="ellipsis"><%= data.user_name %></span></td>
                    <td><span class="ellipsis"><%= data.user_email %></span></td>
                    <td class="cell-center">
                      <% if (data.role == 0){ %><%= __("administrationUser|Admin") %><% } else { %><%= __("administrationUser|Manager") %><% } %>
                    </td>
                    <td class="cell-center"><%= dateFormat(data.last_login) %></td>
                    <td class="cell-center">
                      <button type="button" class="btn btn-icon btn-edit" data-btn="edit">
                        <span class="icon icon-edit"><span class="sr-only"><%= __("administrationUser|edit") %></span></span>
                      </button>
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
              <% if (ObjView.length == 0 && typeof rendering == 'undefined') { %>
              <!-- empty -->
              <div class="empty">
                <div class="empty-box">
                  <div class="symbol symbol-empty">
                    <span class="symbol-icon question-style"></span>
                    <div class="symbol-figure empty-style"></div>
                  </div>
                  <p class="main-msg"><%= __("administrationUser|No data available") %></p>
                  <p class="sub-msg"><%= __("administrationUser|There is no data to show you right now.") %></p>
                </div>
              </div>
              <!-- //empty -->
              <% } %>
            </div>
          </div>
        </div>
        <!-- //table-comp -->
      </div>
      <div class="table-bottom">
        <div class="btn-table-box">
          <button type="button" data-btn="delete" class="btn btn-normal secondary-style"><%= __("administrationUser|Delete") %></button>
          <button type="button" data-btn="new" class="btn btn-normal primary-style"><%= __("administrationUser|New user") %></button>
        </div>
        <div class="table-bottom-right">
          <%- include ('../../../views/include/pagination.ejs', {pages: pages, current: current}) %>
          <div class="ui-select default-style" data-direction="up">
            <select name="" id="listEntries">
