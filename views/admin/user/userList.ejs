              <option value="20"><%= __("administrationUser|Show 20 entries") %></option>
              <option value="30"><%= __("administrationUser|Show 30 entries") %></option>
            </select>
          </div>
        </div>
      </div>
    </div>
  </article>
  <!-- //card-box -->
</div>
