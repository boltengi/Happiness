              </div>
              <div class="custom-search-box">
                <div class="ui-search">
                  <div class="filter-select">
                  </div>
                  <div class="condition-box">
                  </div>
                </div>
              </div>
              <div class="custom-search-footer">
                <button type="button" class="btn btn-normal primary-style smaller-size btn-custom-add"><%= __("administrationUser|Add") %></button>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- //.search-area -->
      <div class="pack">
        <!-- table-comp -->
        <div class="table-comp table-check">
          <div class="table-scroll default-style">
            <div class="thead-scroll">
